---
import { NavLinks } from '../utils/data'
---

<nav
  class='w-full bg-white p-4 fixed top-0 flex items-center justify-between shadow-md z-50'>
  <a class='font-bold text-xl' href='#home'>always.dev</a>
  <div class='flex justify-center items-center gap-x-4'>
    {
      NavLinks.map((item) => {
        return (
          <a class='font-medium text-lg' href={item.link}>
            {item.text}
          </a>
        )
      })
    }
  </div>
</nav>
